extends layouts/main-layout.pug

block styles
    link(rel="stylesheet", href="/css/forms.css")
    link(rel="stylesheet", href="/css/product.css")


block content
        main
            if prods.length > 0
                .grid
                    each product in prods
                        article.card.product-item
                            header.card__header
                                h1.product__title #{product.title}
                            div.card__image
                                img(src="https://cdn.shopify.com/s/files/1/0049/9332/products/Roadster_Classic_Gloss_Black_2019_Profile.jpg?v=1557789177", alt="A Book")
                            div.card__content
                                h2.product__price $399

                                p.product__description The Roadster was designed to be your go-to everyday bike. A timeless profile inspired by French and Italian steel bikes from the 50’s and 60’s. It’s your choice for quick rides to the market or work, and leisurely trips along the avenue.
                            .card__actions
                                button.btn Add to Cart
            else
                h1 No Products

